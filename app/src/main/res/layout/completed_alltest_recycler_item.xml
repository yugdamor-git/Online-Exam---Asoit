<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/round_bottom_navigation"
    android:padding="5dp">

    <TextView
        android:id="@+id/completed_alltest_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Damor Yogesh R"
        android:textAllCaps="true"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/completed_alltest_char" />

    <TextView
        android:id="@+id/completed_alltest_char"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:background="@drawable/student_detail_item_background"
        android:gravity="center"
        android:text="Y"
        android:textAllCaps="true"
        android:textColor="@color/login_bk_color"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/completed_alltest_enrollment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="171200107004"
        app:layout_constraintBottom_toBottomOf="@+id/completed_alltest_char"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/completed_alltest_name" />


    <com.daimajia.numberprogressbar.NumberProgressBar
        android:id="@+id/number_progress_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/completed_alltest_enrollment"
        app:layout_constraintTop_toBottomOf="@+id/completed_alltest_char"

        style="@style/NumberProgressBar_Passing_Green"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="70dp" />

    <Button
        android:id="@+id/completed_alltest_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        android:text="2/9"
        android:textColor="@color/login_bk_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>